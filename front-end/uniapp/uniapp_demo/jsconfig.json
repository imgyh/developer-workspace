// jsconfig.json
{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      // uni-app API 类型
      "@dcloudio/types",
      // 原生微信小程序类型
      "miniprogram-api-typings",
      // uni-app 组件类型
      "@uni-helper/uni-app-types",
      // uni-ui 组件类型
      "@uni-helper/uni-ui-types"
    ]
  },
  // vue 编译器类型，校验标签类型
  "vueCompilerOptions": {
    "nativeTags": [
      "block",
      "component",
      "template",
      "slot"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue"
  ]
}